<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context=".Jeu1Activity$PlaceholderFragment">

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jeu1FragmentChronometer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emplacement de question"
        android:id="@+id/jeu1Question"
        android:layout_marginTop="37dp"
        style="@style/jeu1Question"
        android:layout_below="@+id/jeu1FragmentChronometer"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/jeu1Reponse2"
        android:height="125dp"
        android:width="125dp"
        android:layout_below="@+id/jeu1Question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/jeu1Reponse1"
        android:layout_marginEnd="40dp"
        android:height="125dp"
        android:width="125dp"
        android:layout_alignTop="@+id/jeu1Reponse2"
        android:layout_toStartOf="@+id/jeu1Reponse2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/jeu1Reponse3"
        android:layout_alignTop="@+id/jeu1Reponse2"
        android:layout_toEndOf="@+id/jeu1Reponse2"
        android:layout_marginStart="40dp"
        android:height="125dp"
        android:width="125dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 0 sur 20"
        android:id="@+id/jeu1AvanceTextView"
        style="@style/jeu1Text"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>