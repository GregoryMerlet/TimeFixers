<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background"
    tools:context=".Jeu2Activity$PlaceholderFragment">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/jeu2Reponse2"
        android:height="125dp"
        android:width="125dp"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/portal"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/jeu2Reponse1"
        android:height="125dp"
        android:width="125dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/jeu2TimeProgressBar"
        android:background="@drawable/portal"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/jeu2Reponse3"
        android:height="125dp"
        android:width="125dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/jeu2TimeProgressBar"
        android:background="@drawable/portal"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 0 sur 20"
        android:id="@+id/jeu2AvanceTextView"
        style="@style/jeu1Text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="400dp"
        android:layout_height="10dp"
        android:id="@+id/jeu2TimeProgressBar"
        android:layout_marginRight="5dp"
        android:max="300"
        android:progress="0"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:progressDrawable="@drawable/progressbar_custom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/jeu_1_timer"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/jeu2TimeProgressBar"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        style="@style/jeu1Text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/consigneJeu2"
        android:id="@+id/textView10"
        android:layout_below="@+id/jeu1AvanceTextView"
        android:layout_centerHorizontal="true"
        style="@style/resultListText"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/jeu2Objet"
        android:src="@drawable/objet"
        android:layout_below="@+id/jeu2AvanceTextView"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="true"
        android:focusable="true"
        android:longClickable="true"
        />

</RelativeLayout>